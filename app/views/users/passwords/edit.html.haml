%section.fdb-block
  .container
    .row.justify-content-center
      .col-12.col-md-8.col-lg-7.col-md-5.text-center
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'fdb-box fdb-touch' }) do |f|
          .row
            .col
              %h2= t 'devise.change_password'
          = render 'errors', object: resource
          = f.hidden_field :reset_password_token
          .row
            .col.mt-4
              = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: User.human_attribute_name(:password)
              - if @minimum_password_length
                %small.form-text.text-muted.text-right
                  = t('devise.min_characters', count: @minimum_password_length)

          .row
            .col.mt-4
              = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: User.human_attribute_name(:password_confirmation)

          .row.mt-4
            .col
              = f.submit t('devise.change'), class: 'btn btn-secondary'
          .row.mt-4.justify-content-center
            = render "users/shared/links"